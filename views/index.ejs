<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/nav.ejs')%>
            <div class="w-[70%] mx-auto">
                <h2 class="my-6">All blogs</h2>
                <% if(blogs.length> 0){ %>
                    <% blogs.forEach(blog=> { %>
                        <a href="/blogs/<%= blog._id%>">
                            <div class="my-4 border-b-[1px] p-4 hover:bg-gray-50">
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-500 text-sm">
                                        <%= moment(blog.createdAt).format('DD MMMM, YYYY') %>
                                    </span>
                                    <span>
                                       
                                    </span>
                                </div>
                                <h1 class="text-xl font-bold my-2">
                                    <%= blog.title %>
                                </h1>
                                <p class="truncate">
                                    <%= blog.description %>
                                </p>
                            </div>
                        </a>
                        <% }) %>
                            <% } else {%>
                                <p>No Blogs displaying</p>

                                <%}%>
            </div>
            <%- include('./partials/footer.ejs')%>
    </body>

</html>