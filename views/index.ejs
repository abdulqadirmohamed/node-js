<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/nav.ejs')%>
            <div class="w-[70%] mx-auto">
                <h2>All blogs</h2>
                <% if(blogs.length> 0){ %>
                    <% blogs.forEach(blog=> { %>
                        <div>
                            <h1>
                                <%= blog.title %>
                            </h1>
                            <p>
                                <%= blog.snippet %>
                            </p>
                        </div>
                        <% }) %>
                            <% } else {%>
                                <p>There is not blogs to display</p>

                                <%}%>
            </div>
            <%- include('./partials/footer.ejs')%>
    </body>
</html>